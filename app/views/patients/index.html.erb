<div class="jumbotron">
  <div class="container">
    <h1 class="display-4">Patients</h1>
    <p class="lead">
      The people who really matter.
    </p>
    <p class="lead">
      <%= link_to 'Create a patient', new_patient_path, class: 'btn btn-primary btn-lg' %>
    </p>
  </div>
</div>

<div class="container">
  <% if notice %>
    <p class="alert alert-success"><%= notice %></p>
  <% end %>

  <table class="table table-bordered table-striped">
    <thead>
      <tr>
        <th>Name</th>
      </tr>
    </thead>

    <tbody>
      <% @patients.each do |patient| %>
        <tr>
          <td>
            <%= patient.name %>

            <span class="pull-right">
              <%= link_to edit_patient_path(patient), class: 'btn btn-info btn-sm' do %>
                <%= fa_icon 'pencil' %>
              <% end %>

              <%= link_to patient, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do %>
                <%= fa_icon 'trash' %>
              <% end %>
            </span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
